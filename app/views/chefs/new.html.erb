<%= render 'shared/page_title', title: "Sign up for a Chef's Account" %>

<%= render 'shared/errors', obj: @chef %><%#'obj: @chef' passes in @chef to the _errors partial.%>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@chef, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2"><%#This block is for the name field%>
          <%= f.label :chefname, "Name" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :chefname, class: "form-control", placeholder: "Enter your name", autofocus: true %>
        </div>
      </div>
      <div class="form-group"><%#This block is for the email field%>
        <div class="control-label col-md-2">
          <%= f.label :email %>
        </div>
        <div class="col-md-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
        </div>
      </div>
      <div class="form-group"><%#This block is for the password field%>
        <div class="control-label col-md-2">
          <%= f.label :password %>
        </div>
        <div class="col-md-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter a password" %>
        </div>
      </div>
      <div class="form-group"><%#This block is for the password confirmation field%>
        <div class="control-label col-md-2">
          <%= f.label :password_confirmation, "Confirm Password" %>
        </div>
        <div class="col-md-8">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your password" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-2 col-md-8">
          <%= f.submit "Create My Account", class: "btn btn-primary btn-lg btn-xlarge" %>
        </div>
      </div>
     
   <%end%>
   <div class="col-md-4 col-md-offset-4 colormatch">
     [ <%= link_to "Cancel request and return to recipes listing", recipes_path %> ]<%# The square brackets will display the contents of the embedded Ruby within square brackets.%>
   </div>
  </div>
</div>