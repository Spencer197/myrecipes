<%= render 'shared/page_title', title: "login" %>
<%# Copied the html.erb code below from the chefs/_form partial %>
<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %><%#Provides the path to submit the post request to. %>
  <%# <div> block for chefname not needed - therefore deleted it %>
  <div class="form-group"><%#This block is for the email field%>
    <div class="control-label col-md-2">
      <%= f.label :email %>
    </div>
    <div class="col-md-8">
      <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
    </div>
    </div>
    <div class="form-group"><%#This block is for the password field%>
      <div class="control-label col-md-2">
        <%= f.label :password %>
      </div>
      <div class="col-md-8">
        <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
      </div>
    </div>
    <%# Deleted password confirmation block %>
    <div class="form-group">
      <div class="col-md-offset-2 col-md-8">
        <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-xlarge" %><%#Creates "Log in" button label.%>
      </div>
    </div>
  <%end%>
  <div class="col-md-5 col-md-offset-4 colormatch">
    [ <%= link_to "Don't have an account?  Sign up free!", signup_path %> ]<%# The square brackets will display the contents of the embedded Ruby within square brackets.%>
  </div>