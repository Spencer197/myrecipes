
<% obj.each do |recipe| %>
  <div class= "row">
    <div class="col-md-2">
      <section class="chef_info center">
        <%= gravatar_for(recipe.chef, size: 120)%>
      </section>
    </div>
    <div class="col-md-8 well">
      <h4><%= link_to recipe.name, recipe_path(recipe) %></h4><%#Displays recipe's name%>
      <p><%= truncate(recipe.description, length: 150)%></p><%#Display recipe's description%>
      <p>
        <span class="quiet">Created <small><%= time_ago_in_words(recipe.created_at) %></small></span><%#Displays how long ago recipe was created%>
      </p>
    </div>
  </div>

<% end %>